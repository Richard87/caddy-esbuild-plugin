{
	order esbuild first
	debug
	admin off
}

http://localhost:8080 {
  file_server  {
    root example/public
  }

  esbuild {
    source ./example/src/index.js
    source ./example/src/global.css
    target /build/v2
    live_reload
    sass
    env
    loader .png dataurl
    loader .svg file
    loader .json json
  }
}